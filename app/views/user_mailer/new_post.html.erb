<%
  topic = @post.topic
  addressee_name = @addressee.name
  author_name = @post.creator&.name || "A user"
  community_name = @post.topic.community.name
%>

<% content_for :salutation do %>
  <%= t("shared.salutation_name", name: addressee_name) %>
<% end %>

<% content_for :body do %>
  <%= t("views.mailers.new_post.body", author_name: author_name, community_name: community_name, link_to: link_to(t("views.mailers.new_post.link_to", community_name: community_name), topic_url(topic))).html_safe %>

  <%= render 'mailers/link_fallback', url: topic_url(topic) %>
<% end %>
