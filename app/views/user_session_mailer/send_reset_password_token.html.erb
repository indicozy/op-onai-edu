<%
  reset_password_url = reset_password_url(@url_options)
%>

<% content_for :salutation do %>
  <%= t("shared.salutation_name", name: @user.name) %>
<% end %>

<% content_for :body do %>
  <%= t("views.mailers.send_reset_password_token.body.main_html", school_name: @school_name, link_to: link_to(t("views.mailers.send_reset_password_token.body.link_to"), reset_password_url)) %>

  <%= render 'mailers/link_fallback', url: reset_password_url%>

<% end %>
